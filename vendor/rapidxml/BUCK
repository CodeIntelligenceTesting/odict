remote_file(
    name = 'get',
    url = 'https://github.com/odict/rapidxml/archive/v1.13.zip',
    sha1 = '963d7782580d081d9fa5966cdca4a6d89ae0285a',
    type = 'exploded_zip'
)

genrule(
    name = 'get-headers',
    srcs = [':get'],
    cmd = 'cp -r $SRCS/rapidxml-1.13/* $OUT',
    out = '.'
)

prebuilt_cxx_library(
    name = 'rapidxml',
    header_only = True,
    header_dirs = [':get-headers'],
    visibility = ['PUBLIC']
)